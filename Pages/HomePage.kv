<SplashScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 35/255.0, 181/255.0, 196/255.0, 1  # #23b5c4
            Rectangle:
                pos: self.pos
                size: self.size
        Image:
            source: '../Assets/SplashScreen.jpg'
            allow_stretch: True
            keep_ratio: True
            size_hint: None, None
            size: dp(300), dp(300)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<HomePage>:
    screen_manager: app.screen_manager
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 35/255, 181/255, 196/255, 1  # Background color for the entire BoxLayout
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:  # Container for the Welcome label
            size_hint_y: None
            height: '100dp'
            Label:
                text: 'We are here to help!'
                font_size: '36sp'
                color: 0, 0, 0, 1

        HoverButton:  # Adjusted for HoverBehavior
            on_touch_down: app.go_to_SignLanguageToSpeechPage()
            orientation: 'vertical'
            size_hint_y: None
            height: dp(160)  # Adjust based on your total available height
            padding: '10dp'
            spacing: '-12dp'
            BoxLayout:
                orientation: 'horizontal'
                spacing: '10dp'  # Adjust the spacing between the icons
                padding: '5dp'  # Adjust the padding around the icons
                size_hint_x: None  # Occupy the full width of the button
                width: self.minimum_width  # Set the width to the minimum required
                pos_hint: {'center_x': 0.5}  # Center the icons horizontally
                Image:
                    source: '../Assets/SL to speech.png'
                    size_hint_x: None
                    width: dp(96)  # Set a fixed width for the icon
                    allow_stretch: True
                    keep_ratio: True
                Image:
                    source: '../Assets/right.png'  # Add your arrow icon source here
                    size_hint_x: None
                    width: dp(32)  # Set a fixed width for the arrow icon
                    allow_stretch: True
                    keep_ratio: True
                Image:
                    source: '../Assets/Text to speech.png'
                    size_hint_x: None
                    width: dp(96)  # Set a fixed width for the icon
                    allow_stretch: True
                    keep_ratio: True
            Label:
                text: 'Sign Language to Speech'
#                on_press: root.screen_manager.current = 'TextToSpeechPage'
                size_hint_y: None
                height: dp(64)
                color: 0, 0, 0, 1

        HoverButton:  # Adjusted for HoverBehavior
            on_touch_down: app.go_to_TextToSpeechPage()
            orientation: 'vertical'
            size_hint_y: None
            height: dp(160)
            padding: '10dp'
            spacing: '-12dp'
            Image:
                source: '../Assets/Text to speech.png'
                size_hint_y: None
                allow_stretch: True
                keep_ratio: True
                height: dp(96)
            Label:
                text: 'Text to Speech'
                size_hint_y: None
                height: dp(64)
                color: 0, 0, 0, 1

        HoverButton:  # Adjusted for HoverBehavior with arrow icon beside speech to text
            on_touch_down: app.go_to_SpeechToSignLanguagePage()
            orientation: 'vertical'
            size_hint_y: None
            height: dp(160)
            padding: '10dp'
            spacing: '-12dp'
            BoxLayout:
                orientation: 'horizontal'
                spacing: '10dp'  # Adjust the spacing between the icons
                padding: '5dp'  # Adjust the padding around the icons
                size_hint_x: None  # Occupy the full width of the button
                width: self.minimum_width  # Set the width to the minimum required
                pos_hint: {'center_x': 0.5}  # Center the icons horizontally
                Image:
                    source: '../Assets/Speech to text.png'
                    size_hint_x: None
                    width: dp(96)  # Set a fixed width for the icon
                    allow_stretch: True
                    keep_ratio: True
                Image:
                    source: '../Assets/right.png'  # Add your arrow icon source here
                    size_hint_x: None
                    width: dp(32)  # Set a fixed width for the arrow icon
                    allow_stretch: True
                    keep_ratio: True
                Image:
                    source: '../Assets/SL to speech.png'
                    size_hint_x: None
                    width: dp(96)  # Set a fixed width for the icon
                    allow_stretch: True
                    keep_ratio: True
            Label:
                text: 'Speech to Sign Language'
                size_hint_y: None
                height: dp(64)
                color: 0, 0, 0, 1
