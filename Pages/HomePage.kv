<SplashScreen>:
  FloatLayout:
    canvas.before:
      Color:
        rgba: 35/255.0, 181/255.0, 196/255.0, 1 # #23b5c4
      Rectangle:
        pos: self.pos
        size: self.size
    Image:
      source: '../Assets/SplashScreen.jpg'
      allow_stretch: True
      keep_ratio: True
      size_hint: None, None
      size: root.width * 0.5, root.height * 0.5
      pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<HomePage>:
  screen_manager: app.screen_manager
  BoxLayout:
    orientation: 'vertical'
    canvas.before:
      Color:
        rgba: 35/255, 181/255, 196/255, 1 
      Rectangle:
        pos: self.pos
        size: self.size

    BoxLayout: 
      size_hint_y: None
      height: self.parent.height * 0.15
      Label:
        text: 'We are here to help!'
        font_size: (root.width + root.height) * 0.04
        color: 0, 0, 0, 1

    HoverButton: 
      action: 'sign_language_to_speech'
      orientation: 'vertical'
      size_hint_y: 0.2
      padding: '5dp'
      spacing: '5dp'
      BoxLayout:
        orientation: 'horizontal'
        size_hint_x: 0.8
        pos_hint: {'center_x': 0.5}
        spacing: 0
        Image:
          source: '../Assets/signlanguage.png'
          allow_stretch: True
          keep_ratio: True
          size_hint_x: 0.4
          width: self.parent.width * 0.2
    
          
        Image:
          source: '../Assets/bluearrow.png'
          allow_stretch: True
          keep_ratio: True
          size_hint_x: 0.1
          width: self.parent.width * 0.1
          
          
        Image:
          source: '../Assets/voice.png'
          allow_stretch: True
          keep_ratio: True
          size_hint_x: 0.4
          width: self.parent.width * 0.2
          
          
      Label:
        text: 'Sign Language to Speech'
        height: self.parent.height * 0.05
        font_size: (root.width + root.height) * 0.02
        color: 0, 0, 0, 1

    HoverButton:
      action: 'text_to_speech'
      orientation: 'vertical'
      size_hint_y: 0.2
      padding: '5dp'
      spacing: '5dp'
      BoxLayout:
        orientation: 'horizontal'
        size_hint_x: 0.8
        pos_hint: {'center_x': 0.5}
        spacing: 0
        Image:
          source: '../Assets/text.png'
          allow_stretch: True
          keep_ratio: True
          size_hint_x: 0.4
          width: self.parent.width * 0.2


        Image:
          source: '../Assets/bluearrow.png'
          allow_stretch: True
          keep_ratio: True
          size_hint_x: 0.1
          width: self.parent.width * 0.1


        Image:
          source: '../Assets/voice.png'
          allow_stretch: True
          keep_ratio: True
          size_hint_x: 0.4
          width: self.parent.width * 0.2


      Label:
        text: 'Text to Speech'
        height: self.parent.height * 0.05
        font_size: (root.width + root.height) * 0.02
        color: 0, 0, 0, 1

    HoverButton: # Adjusted for HoverBehavior
      action:'speech_to_sign_language'
      orientation: 'vertical'
      size_hint_y: 0.2
      padding: '5dp'
      spacing: '5dp'
      BoxLayout:
        orientation: 'horizontal'
        size_hint_x: 0.8
        pos_hint: {'center_x': 0.5}
        spacing: 0
        Image:
          source: '../Assets/speaking2.png'
          allow_stretch: True
          keep_ratio: True
          size_hint_x: 0.4
          width: self.parent.width * 0.2
    
          
        Image:
          source: '../Assets/bluearrow.png'
          allow_stretch: True
          keep_ratio: True
          size_hint_x: 0.1
          width: self.parent.width * 0.1
          
          
        Image:
          source: '../Assets/signlanguage.png'
          allow_stretch: True
          keep_ratio: True
          size_hint_x: 0.4
          width: self.parent.width * 0.2
          
          
      Label:
        text: 'Speech to Sign Language'
        height: self.parent.height * 0.05
        font_size: (root.width + root.height) * 0.02
        color: 0, 0, 0, 1