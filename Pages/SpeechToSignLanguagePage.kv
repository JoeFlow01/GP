<SpeechToSignLanguagePage>:
    canvas.before:
        Color:
            rgba: 35/255.0, 181/255.0, 196/255.0, 1  # #23b5c4
        Rectangle:
            size: self.size
            pos: self.pos

    RelativeLayout:
        Label:
            id: recorded_text_label
            text: 'Recorded text will be displayed here'
            size_hint: None, None
            size: 900, 100
            multiline: True
            center_x: root.width / 2
            center_y: root.height / 2 + 200  # Adjust vertically, moved up
            padding: 10
            color: 0, 0, 0, 1  # Black text color

        Button:
            size_hint: None, None
            size: 250, 50
            center_x: root.width / 2
            center_y: root.height / 2 + 100  # Adjusted position, moved up
            padding: 10
            on_press: root.speak()

            RelativeLayout:
                size: self.parent.size
                pos: self.parent.pos

                Image:
                    source: '../Assets/audio.png'  # Path to your icon image
                    size_hint: None, None
                    size: 32, 32  # Adjust size as needed
                    pos_hint: {'center_y': 0.5, 'left': 0.5}  # Adjust left position

                Label:
                    text: 'Start Recording'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_y': 0.5, 'right': 0.8}  # Adjust right position

    RelativeLayout:
        Video:
            source: '../Assets/test.mp4'  # Path to your video file
            size_hint: None, None
            size: 500, 450  # Adjust size as needed
            state : "play"
            center_x: root.width / 2
            center_y: root.height / 2 - 170  # Adjust vertically, moved down
            options: {'eos': 'loop'}


