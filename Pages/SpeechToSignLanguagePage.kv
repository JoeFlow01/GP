<SpeechToSignLanguagePage>:
    canvas.before:
        Color:
            rgba: 35/255.0, 181/255.0, 196/255.0, 1  # #23b5c4
        Rectangle:
            size: self.size
            pos: self.pos

    RelativeLayout:
        Label:
            text: "Speech to Sign Language"
            font_size: (root.width + root.height) * 0.02
            color: 0, 0, 0, 1
            size_hint: None, None
            size: self.texture_size
            center_x: self.parent.width * 0.5
            center_y: root.height * 0.92  # Position the label above the buttons

        Button:
            text: "Start Listening"
            font_size: (root.width + root.height) * 0.015
            size_hint: 0.5, 0.1  # Make the grid layout responsive
            pos_hint: { 'center_x': 0.5, 'center_y': 0.8 }  # Center the grid layout
            on_press: root.recognize_speech_from_mic(video_element,displayer_label)

        Label:
            text: "Recorded text will be displayed here"
            id : displayer_label
            font_size: (root.width + root.height) * 0.015
            color: 0, 0, 0, 1
            size_hint: None, None
            size: self.texture_size
            center_x: self.parent.width * 0.5
            center_y: root.height * 0.65  # Position the label above the buttons

    RelativeLayout:
        Video:
            id: video_element
            #source: '../Videos/No.mp4'  # Path to your video file
            size_hint: 0.8, 0.4  # Adjust size as needed
            state: "pause"
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}  # Center the video element
            options: {'eos': 'loop'}



        Button:
            id: home_btn
            font_size: (root.width + root.height) * 0.01
            text: "Home"  # Button text
            size_hint: 0.2, 0.1  # Button fills the RelativeLayout
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}  # Position below play button
            on_press: root.go_to_home(video_element)  # Bind to Python function for home action
