<SpeechToSignLanguagePage>:
    canvas.before:
        Color:
            rgba: 35/255.0, 181/255.0, 196/255.0, 1  # #23b5c4
        Rectangle:
            size: self.size
            pos: self.pos

    RelativeLayout:
        Button:
            size_hint: None, None
            size: 250, 50
            center_x: root.width / 2
            center_y: root.height / 2 + 250  # Adjusted position, moved up
            padding: 10
            on_press: root.speak()

            RelativeLayout:
                size: self.parent.size
                pos: self.parent.pos

                Image:
                    source: '../Assets/audio.png'  # Path to your icon image
                    size_hint: None, None
                    size: 32, 32  # Adjust size as needed
                    pos_hint: {'center_y': 0.5, 'left': 0.5}  # Adjust left position

                Label:
                    text: 'Start Recording'
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_y': 0.5, 'right': 0.8}  # Adjust right position

    RelativeLayout:
        Video:
            id: video_element
            source: '../Assets/test.mp4'  # Path to your video file
            size_hint: None, None
            size: 500, 350  # Adjust size as needed
            state : "pause"
            center_x: root.width / 2
            center_y: root.height / 2   # Adjust vertically, moved down
            options: {'eos': 'loop'}
        Button:
            id : play_pause_btn
            text: "Play"  # Button text
            size_hint: None, None
            size: 100, 50  # Adjust size as needed
            center_x: root.width / 2
            center_y: root.height / 2 - 200  # Position below video
            on_press: root.control_video(video_element,play_pause_btn)  # Bind to Python function

        Button:
            id: home_btn
            text: "Home"  # Button text
            size_hint: None, None
            size: 100, 50  # Button fills the RelativeLayout
            center_x: root.width / 2
            center_y: root.height / 2 - 300  # Position below video
            on_press: root.go_to_home()  # Bind to Python function for home action



