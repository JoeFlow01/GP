<TextToSpeechPage>:
    canvas.before:
        Color:
            rgba: 35/255.0, 181/255.0, 196/255.0, 1  # #23b5c4
        Rectangle:
            size: self.size
            pos: self.pos

    RelativeLayout:
        TextInput:
            id: text_input
            hint_text: 'Enter text here'
            size_hint: None, None
            size: 900, 500
            multiline: False
            center_x: root.width / 2
            center_y: root.height / 2 + 50  # Adjust vertically
            padding: 10


        Button:
            text: 'Convert Text to Speech'
            size_hint: None, None
            size: 250, 50
            center_x: root.width / 2
            center_y: root.height / 2 - 250  # Move the button downward
            padding: 10
            on_press: root.speak()
